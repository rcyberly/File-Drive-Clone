# --- SERVER CONFIGURATION ---
PORT=3000

# IMPORTANT: This secret must be strong and consistent between the authController and authMiddleware!
JWT_SECRET=a_very_secure_and_long_jwt_secret_key_for_development_2024

# --- POSTGRESQL DATABASE CONFIGURATION ---

# These variables are read by the 'pg' library automatically if named correctly.
PGUSER=postgres
PGHOST=localhost
PGDATABASE=file_drive
PGPASSWORD=rajinder
PGPORT=5432

# --- STORAGE CONFIGURATION ---

# Path where uploaded files will be physically stored. This is relative to the project root.
STORAGE_PATH=storage

# Alternative connection URL (Good for quick checks/other tools)
# Format: postgres://[user]:[password]@[host]:[port]/[database_name]
DATABASE_URL=postgres://postgres:rajinder@localhost:5432/file_drive